# Contributor: Daniel J Griffiths <ghost1227@archlinux.us>

pkgname=7zip-zstd
_pkgname=7zip
pkgver=23.01
pkgrel=2
_upstream_pkgrel=4
pkgdesc="File archiver with a high compression ratio (full package to replace p7zip)"
arch=('x86_64')
url="https://github.com/mcmilk/7-Zip-zstd/"
license=('LGPL-2.1-or-later')
depends=()
conflicts=('7zip')
provides=('7zip')
source=(https://github.com/mcmilk/7-Zip-zstd/archive/refs/tags/v$pkgver.$_upstream_pkgrel.tar.gz
  https://github.com/mcmilk/7-Zip-zstd/releases/download/v$pkgver.$_upstream_pkgrel/p7zip-linux-x86_64-musl.zip)
sha256sums=('SKIP')

prepare() {
  cd $_pkgname-$pkgver.$_upstream_pkgrel
  mkdir -p bin/
}

build() {
  cd $_pkgname-$pkgver.$_upstream_pkgrel
  cp -a ${srcdir}/7zip bin/

}

package() {
  cd $_pkgname-$pkgver.$_upstream_pkgrel
  make install \
    DEST_DIR="$pkgdir" \
    DEST_HOME=/usr \
    DEST_MAN=/usr/share/man

  # Remove documentation for the GUI file manager
  rm -r "$pkgdir/usr/share/doc/7zip/DOC/MANUAL/fm"

  install -d "${pkgdir}"/usr/share/licenses/p7zip
  ln -s -t "$pkgdir/usr/share/licenses/p7zip/" \
    /usr/share/doc/7zip/DOC/License.txt \
    /usr/share/doc/7zip/DOC/unRarLicense.txt
}

