# Other
ac_add_options --enable-linker=lld
export AR=/usr/bin/llvm-ar
export CC=/usr/bin/clang
export CXX=/usr/bin/clang++
export NM=/usr/bin/llvm-nm
export RANLIB=/usr/bin/llvm-ranlib

# Parallel build
mk_add_options AUTOCLOBBER=1
mk_add_options MOZ_PARALLEL_COMPILE=30
mk_add_options MOZ_PARALLEL_BUILD=30

# Telemetry, reporting, crash
export MOZILLA_OFFICIAL=1
mk_add_options MOZ_CRASHREPORTER=0
mk_add_options MOZ_DATA_REPORTING=0
mk_add_options MOZ_SERVICES_HEALTHREPORT=0
mk_add_options MOZ_TELEMETRY_REPORTING=0
export MOZ_TELEMETRY_REPORTING=0
export MOZ_CRASHREPORTER=0
export MOZ_DATA_REPORTING=0
export MOZ_REQUIRE_SIGNING=0


# Output dir
mk_add_options MOZ_OBJDIR=@TOPSRCDIR@/obj-firefox

# Compiler Flags
export RUSTFLAGS="-Copt-level=3 -Ctarget-cpu=native -Ccodegen-units=1 -Cdebuginfo=0 -Cpanic=abort -Cforce-frame-pointers=no -Cembed-bitcode=yes -Cllvm-args=--inline-threshold=2000 -Cllvm-args=--vectorize-slp-max-reg-size=64"
export CFLAGS="-O3 -march=native -fno-semantic-interposition -fomit-frame-pointer -fdata-sections -ffunction-sections -fno-plt -funroll-loops -ftree-vectorize -fno-math-errno -freciprocal-math -fno-tree-scev-cprop"
export CXXFLAGS="$CFLAGS"
export LDFLAGS="-Wl,-O3 -Wl,--gc-sections -Wl,-z,now -Wl,-z,relro -Wl,--icf=all -Wl,--as-needed -Wl,--hash-style=gnu -Wl,--sort-common -Wl,--build-id=none"

export MOZ_NO_PIE_COMPAT=1 MOZ_NOSPAM=1 MACH_BUILD_PYTHON_NATIVE_PACKAGE_SOURCE=system

# Optimization levels for mozconfig
ac_add_options OPT_LEVEL="3"
ac_add_options RUSTC_OPT_LEVEL="3"
export RUSTC_OPT_LEVEL=3
export OPT_LEVEL=3

if [ -n "$PGO_PROFILE_USE" ]; then
  export MOZ_LTO=cross,full
  ac_add_options --enable-profile-use=cross
  ac_add_options --with-pgo-profile-path=$WORKSPACE/mozilla-release/merged.profdata
fi
if [ -n "$PGO_PROFILE_GENERATE" ]; then
  ac_add_options --enable-profile-generate=cross,full
fi
ac_add_options --enable-js-shell
export MOZ_PACKAGE_JSSHELL=1

