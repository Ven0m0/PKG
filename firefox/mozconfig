# Compiler Flags
export RUSTFLAGS="-Copt-level=3 -Ctarget-cpu=native -Ccodegen-units=1 -Cdebuginfo=0 -Cpanic=abort -Cforce-frame-pointers=no -Cembed-bitcode=yes -Cllvm-args=--inline-threshold=2000 -Cllvm-args=--vectorize-loops -Cllvm-args=--vectorize-slp -Cllvm-args=--unroll-threshold=1000"
export CFLAGS="-O3 -march=native -fno-semantic-interposition -fomit-frame-pointer -fdata-sections -ffunction-sections -fno-plt -funroll-loops -ftree-vectorize -fno-math-errno -freciprocal-math -fno-trapping-math -fno-common -pipe -fmerge-all-constants -fno-signed-zeros -fno-zero-initialized-in-bss"
export CXXFLAGS="$CFLAGS"
export LDFLAGS="-Wl,-O3 -Wl,--gc-sections -Wl,-z,now -Wl,-z,relro -Wl,--icf=all -Wl,--as-needed -Wl,--hash-style=gnu -Wl,--sort-common -Wl,--build-id=none"







