+static void extract_zone_keyframes(const QualityZone* zones, uint16_t num_zones, 
+                                   uint64_t** keyframes_out, size_t* count_out) {
+    if (!zones || num_zones == 0) {
+        *keyframes_out = NULL;
+        *count_out = 0;
+        return;
+    }
+    
+    // Count how many keyframes we need (max 2 per zone)
+    size_t max_keyframes = 0;
+    for (uint16_t i = 0; i < num_zones; i++) {
+        if (zones[i].force_keyframes) {
+            max_keyframes += 2; // start and end+1
+        }
+    }
+    
+    if (max_keyframes == 0) {
+        *keyframes_out = NULL;
+        *count_out = 0;
+        return;
+    }
+    
+    uint64_t* keyframes = (uint64_t*)malloc(max_keyframes * sizeof(uint64_t));
+    if (!keyframes) {
+        *keyframes_out = NULL;
+        *count_out = 0;
+        return;
+    }
+    
+    size_t count = 0;
+    for (uint16_t i = 0; i < num_zones; i++) {
+        if (zones[i].force_keyframes) {
+            // Add start frame
+            bool found = false;
+            for (size_t j = 0; j < count; j++) {
+                if (keyframes[j] == zones[i].start_frame) {
+                    found = true;
+                    break;
+                }
+            }
+            if (!found) {
+                keyframes[count++] = zones[i].start_frame;
+            }
+            
+            // Add end+1 frame
+            uint64_t end_plus_one = zones[i].end_frame + 1;
+            found = false;
+            for (size_t j = 0; j < count; j++) {
+                if (keyframes[j] == end_plus_one) {
+                    found = true;
+                    break;
+                }
+            }
+            if (!found) {
+                keyframes[count++] = end_plus_one;
+            }
+        }
+    }
+    
+    *keyframes_out = keyframes;
+    *count_out = count;
+}
